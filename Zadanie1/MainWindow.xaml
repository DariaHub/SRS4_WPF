<Window x:Class="Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
        <Button Content="Новости" Name="New" HorizontalAlignment="Left" Padding="5"
                VerticalAlignment="Top" FontSize="16" Margin="10"  Background="#FFDACEEA"/>
        <Button Content="Главная" Name="Home" HorizontalAlignment="Left" Padding="5"
                VerticalAlignment="Top" FontSize="16" Margin="10"  Background="#FFDACEEA"/>
        <Button Content="О нас" Name="About" HorizontalAlignment="Left" Padding="5"
                VerticalAlignment="Top" FontSize="16" Margin="10" Background="#FFDACEEA"/>
            <Button Content="Контакты" Name="Contact" HorizontalAlignment="Left" Padding="5"
                VerticalAlignment="Top" FontSize="16" Margin="10" Background="#FFDACEEA"/>
        </StackPanel>
        <Button Content="Изменить язык" Name="ChangeLanguage" HorizontalAlignment="Right" Padding="5"
                VerticalAlignment="Top" Click="ChangeLanguage_Click" FontSize="16" Margin="10"/>
    </Grid>
</Window>
